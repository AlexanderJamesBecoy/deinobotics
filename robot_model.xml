<mujoco model="biped">
    <compiler angle="degree" autolimits="true"/>
    <option gravity="0 0 -9.81" integrator="RK4" timestep="0.01"/>
    
    <!-- <visual>
        <map force="0.1" zfar="30"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <quality shadowsize="4096"/>
        <global offwidth="800" offheight="800"/>
      </visual> -->

    <asset>
        <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
        <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>    
    </asset>

    <worldbody>
        <geom name="floor" size="0 0 .05" type="plane" material="grid" conaffinity="15" condim="3"/>
        <light name="spotlight" mode="targetbodycom" target="torso" diffuse=".8 .8 .8" specular="0.3 0.3 0.3" pos="0 -20 4" cutoff="10"/>

        <!-- Torso -->
        <body name="torso" pos="0 0 0.65">
            <freejoint/>
            <geom type="box" size="0.1 0.1 0.15" rgba="0.8 0.4 0.4 1"/>

            <!-- Left Leg -->
            <body name="left_pelvis" pos="-0.1 0 0" euler="0 0 -90">
                <joint name="LHIE_joint" type="hinge" axis="0 0 -1" pos="0 0 0" range="-90 90" ref="0"/>
                <geom type="capsule" size="0.025 0.025" fromto="0 0 0 0 0 -0.1" rgba="0.4 0.4 0.8 1"/>
                <body name="left_hip" pos="0 0 -0.1" euler="-90 0 0">
                    <joint name="LHAA_joint" type="hinge" axis="-1 0 0" pos="0 0 0" range="-90 90" ref="0"/>
                    <geom type="capsule" size="0.025 0.025" fromto="0 0 0 0 0 -0.1" rgba="0.4 0.4 0.8 1"/>
                    <body name="left_thigh" pos="0 0 -0.1" euler="90 -45 0">
                        <joint name="LHFE_joint" type="hinge" axis="0 -1 0" pos="0 0 0" range="-90 90" ref="0"/>
                        <geom type="capsule" size="0.05 0.25" fromto="0 0 0 0 0 -0.15" rgba="0.4 0.4 0.8 1"/>
                        <body name="left_shin" pos="0 0 -0.15" euler="0 75 0">
                            <joint name="LKFE_joint" type="hinge" axis="0 1 0" pos="0 0 0" range="0 135" ref="75"/>
                            <geom type="capsule" size="0.025 0.025" fromto="0 0 0 0 0 -0.3" rgba="0.4 0.4 0.8 1"/>
                            <body name="left_ankle" pos="0 0 -0.3" euler="0 -60 0">
                                <joint name="LADPF_joint" type="hinge" axis="0 -1 0" pos="0 0 0" range="-90 90"/>
                                <geom type="capsule" size="0.025 0.025" fromto="0 0 0 0 0 -0.15" rgba="0.4 0.4 0.8 1"/>
                                <body name="left_foot" pos="0 0 -0.18" euler="0 30 0">
                                    <geom type="box" size="0.1 0.05 0.01" rgba="0.4 0.4 0.8 1"/>
                                </body>
                            </body>
                        </body>
                    </body>
                </body>
            </body>

            <!-- Right Leg -->
            <body name="right_pelvis" pos="0.1 0 0" euler="0 0 90">
                <joint name="RHIE_joint" type="hinge" axis="0 0 1" pos="0 0 0" range="-90 90" ref="0"/>
                <geom type="capsule" size="0.025 0.025" fromto="0 0 0 0 0 -0.1" rgba="0.4 0.4 0.8 1"/>
                <body name="right_hip" pos="0 0 -0.1" euler="-90 0 0">
                    <joint name="RHAA_joint" type="hinge" axis="-1 0 0" pos="0 0 0" range="-90 90" ref="0"/>
                    <geom type="capsule" size="0.025 0.025" fromto="0 0 0 0 0 -0.1" rgba="0.4 0.4 0.8 1"/>
                    <body name="right_thigh" pos="0 0 -0.1" euler="90 45 0">
                        <joint name="RHFE_joint" type="hinge" axis="0 1 0" pos="0 0 0" range="-90 90" ref="0"/>
                        <geom type="capsule" size="0.05 0.25" fromto="0 0 0 0 0 -0.15" rgba="0.4 0.4 0.8 1"/>
                        <body name="right_shin" pos="0 0 -0.15" euler="0 -75 0">
                            <joint name="RKFE_joint" type="hinge" axis="0 -1 0" pos="0 0 0" range="0 135" ref="75"/>
                            <geom type="capsule" size="0.025 0.025" fromto="0 0 0 0 0 -0.3" rgba="0.4 0.4 0.8 1"/>
                            <body name="right_ankle" pos="0 0 -0.3" euler="0 60 0">
                                <joint name="RADPF_joint" type="hinge" axis="0 1 0" pos="0 0 0" range="-90 90"/>
                                <geom type="capsule" size="0.025 0.025" fromto="0 0 0 0 0 -0.15" rgba="0.4 0.4 0.8 1"/>
                                <body name="right_foot" pos="0 0 -0.18" euler="0 -30 0">
                                    <geom type="box" size="0.1 0.05 0.01" rgba="0.4 0.4 0.8 1"/>
                                </body>
                            </body>
                        </body>
                    </body>
                </body>
            </body>

        </body>
        
    </worldbody>

    <!-- Actuators for the hips and knees -->
    <actuator>
        <motor name="LHIE_motor" joint="LHIE_joint" ctrlrange="-1 1" gear="100"/>
        <motor name="LHAA_motor" joint="LHAA_joint" ctrlrange="-1 1" gear="100"/>
        <motor name="LHFE_motor" joint="LHFE_joint" ctrlrange="-1 1" gear="100"/>
        <motor name="LKFE_motor" joint="LKFE_joint" ctrlrange="-1 1" gear="100"/>
        <motor name="LADPF_motor" joint="LADPF_joint" ctrlrange="-1 1" gear="100"/>
        <motor name="RHIE_motor" joint="RHIE_joint" ctrlrange="-1 1" gear="100"/>
        <motor name="RHAA_motor" joint="RHAA_joint" ctrlrange="-1 1" gear="100"/>
        <motor name="RHFE_motor" joint="RHFE_joint" ctrlrange="-1 1" gear="100"/>
        <motor name="RKFE_motor" joint="RKFE_joint" ctrlrange="-1 1" gear="100"/>
        <motor name="RADPF_motor" joint="RADPF_joint" ctrlrange="-1 1" gear="100"/>
    </actuator>
</mujoco>
